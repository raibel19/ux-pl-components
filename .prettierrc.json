{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "plugins": [
        "prettier-plugin-tailwindcss",
        "prettier-plugin-css-order"
    ],
    "tailwindFunctions": [
        "cva",
        "clsx",
        "cx",
        "cn",
        "twMerge"
    ],
    "overrides": [
        {
            "files": [
                "*.css",
                "*.scss",
                "*.less"
            ],
            "options": {
                "printWidth": 180,
                "singleQuote": false,
                "tabWidth": 2
            }
        }
    ]
}